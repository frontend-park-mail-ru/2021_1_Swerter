div.profile-page
    component(name='Header')
    component(name='ProfileHeader')
    div(class="profile-content")
        if switchContent === "POSTS"
            div(class="left-content-column")
                div(class="left-content-1")
                div(class="left-content-2")
            div(class="right-content")
                div(class="lenta")
                    if myPage
                        component(name='AddPost')
                    if (postsData.length !== 0)
                        each postData in postsData
                            - const jsonPost = JSON.stringify(postData);
                            div(class="post-profile-wrapper")
                                component(name='Post' props=jsonPost)
                    else
                        div(class="no-post-content")
                            b No posts yet... #{test}
        else if switchContent === "ALBUMS"
            div(class="albums-wrapper")
                div(class="albums-content")
                    div(class="albums-content__item create-album-block")
                        div(class="album-title-img")
                            img(class = "img-add-album" src="./assets/iconAddAlbum.png")
                        div(class="album-title-text")
                            span Create Album
                    each album in albumsData
                        component(name='AlbumPreview' src=album.imgContent[0] title=album.albumTitle id=album.ID)