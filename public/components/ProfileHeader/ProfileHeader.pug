div(class="profile-header-content")
    div(class="header-content")
        img(id="bg" class="background-img" src=user.imgBg)
        div(class="upload-bg-wr")
        div(class="ava-img")
            div.ava-wrapper
                img(class="ava" src=user.imgAvatar)
                if myPage
                    div(class="upload-ava profile-header-upload-ava")
                        i(class="fas fa-camera fa-2x")
        div(class="profile-info")
            if !editMode
                div(class="profile-info-content")
                    h1.first-last-name
                        | #{user.firstName}
                        | #{user.lastName}
                    if myPage
                        div(class="btn-edit-profile" )
                            b Edit
                    hr(class="profile-header-line")
                    div(class="switch-profile-page-content")
                        div(class="switch-profile-page-content__item posts-switch")
                            h4 Posts
                        div(class="switch-profile-page-content__item albums-switch")
                            h4 Albums
            else
                div(class="profile-editing")
                    div
                        label.profile-edit-lbl Firstname:
                            input(value=user.firstName class="edit-input input-firstname")
                    div
                        label.profile-edit-lbl Lastname:
                            input(value=user.lastName class="edit-input input-lastname")
                    input(type="submit" class="btn-edit-submit-profile profile-header-edit-submit")