div(class='register-form')
    div(class='register-form__content')
        div(class='register-form__header')
            div(class='register-form__title') Registration
            div(class='register-form__div-close' onclick='router.goLogin()')
                img(src='assets/close.png' class='register-form__img-close')
        div(class='register-form__div-item')
            input(type='text' name='login' class='register-form__input' required pattern='^([a-zA-Z0-9_\\-\\.]+)@([a-zA-Z0-9_\\-\\.]+)\\.([a-zA-Z]{2,5})$|^(\\+7|7|8)?[\\s\\-]?\\(?[489][0-9]{2}\\)?[\\s\\-]?[0-9]{3}[\\s\\-]?[0-9]{2}[\\s\\-]?[0-9]{2}$' autocomplete='on' placeholder='Email or telephone number')
        div(class='register-form__div-item')
            input(type='password' name='password' class='register-form__input register-form__input_password' required pattern='^(?=.*[A-Za-z])(?=.*\\d)[A-Za-z\\d]{8,}$' autocomplete='on' placeholder='Password (>8 symbols, less one character)')
        div(class='register-form__div-item')
            input(type='password' name='password-repeat' class='register-form__input register-form__input_password' required pattern='^(?=.*[A-Za-z])(?=.*\\d)[A-Za-z\\d]{8,}$' autocomplete='on' placeholder='Password repeat')
        div(class='register-form__div-item')
            input(type='text' name='first-name' class='register-form__input' required autocomplete='on' placeholder='Firstname')
        div(class='register-form__div-item')
            input(type='text' name='last-name' class='register-form__input' required autocomplete='on' placeholder='Lastname')
        button(type='button' class='register-form__button-register' onclick='submitRegisterForm()') Register

