div.modal-wrapper
    div.modal-bg(class="modal-config")

    div.cred-form
        if mode === 'PASSWORD'
            div(class='register-form')
                div(class='register-form__content')
                    div(class='register-form__header')
                        div(class='register-form__title') Change password
                        div(class='register-form__div-close change-pass-form__div-close')
                            img(src='assets/close.png' class='register-form__img-close')
                    div(class='register-form__div-item')
                        input(
                            type='password'
                            class='register-form__input register-form__input_password input-old-password'
                            required pattern='^(?=.*[A-Za-z])(?=.*\\d)[A-Za-z\\d]{8,}$'
                            autocomplete='on'
                            placeholder='Enter old password'
                            value=oldPassword
                        )
                    div(class='register-form__div-item')
                        input(
                            type='password'
                            class='register-form__input register-form__input_password input-new-password'
                            required
                            pattern='^(?=.*[A-Za-z])(?=.*\\d)[A-Za-z\\d]{8,}$'
                            placeholder='Enter new password'
                            value=password
                        )
                    div(class='register-form__div-item')
                        input(
                            type='password'
                            class='register-form__input register-form__input_password input-new-password-repeat'
                            required
                            pattern='^(?=.*[A-Za-z])(?=.*\\d)[A-Za-z\\d]{8,}$'
                            placeholder='Repeat new password'
                            value=passwordRepeat
                        )
                    button(
                        type='button'
                        class='register-form__button-register'
                    ) Change
        else if mode === 'LOGIN'
            div(class='register-form')
                div(class='register-form__content')
                    div(class='register-form__header')
                        div(class='register-form__title') Change login
                        div(class='register-form__div-close change-login-form__div-close')
                            img(src='assets/close.png' class='register-form__img-close')
                    div(class='register-form__div-item')
                        input(
                            type='text'
                            class='register-form__input input-new-login'
                            required
                            pattern='^([a-zA-Z0-9_\\-\\.]+)@([a-zA-Z0-9_\\-\\.]+)\\.([a-zA-Z]{2,5})$|^(\\+7|7|8)?[\\s\\-]?\\(?[489][0-9]{2}\\)?[\\s\\-]?[0-9]{3}[\\s\\-]?[0-9]{2}[\\s\\-]?[0-9]{2}$'
                            autocomplete='on'
                            placeholder='Enter new login'
                            value=login
                        )
                button(
                    type='button'
                    class='register-form__button-register change-login-form__button-change-login'
                    ) Change