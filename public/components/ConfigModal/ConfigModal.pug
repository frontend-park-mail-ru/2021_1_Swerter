div.modal-wrapper
    div.modal-bg(id="modal-config" onclick="closeModal()")

    div.cred-form
        if data.changePassword
            div(class='register-form')
                div(class='register-form__content')
                    div(class='register-form__header')
                        div(class='register-form__title') Change password
                        div(class='register-form__div-close' onclick='closeModal()')
                            img(src='assets/close.png' class='register-form__img-close')
                    div(class='register-form__div-item')
                        input(id="input-old-password" type='text' name='login' class='register-form__input' required pattern='^([a-zA-Z0-9_\\-\\.]+)@([a-zA-Z0-9_\\-\\.]+)\\.([a-zA-Z]{2,5})$|^(\\+7|7|8)?[\\s\\-]?\\(?[489][0-9]{2}\\)?[\\s\\-]?[0-9]{3}[\\s\\-]?[0-9]{2}[\\s\\-]?[0-9]{2}$' autocomplete='on' placeholder='Enter old password')
                    div(class='register-form__div-item')
                        input(id="input-new-password" type='password' name='password' class='register-form__input register-form__input_password' required pattern='^(?=.*[A-Za-z])(?=.*\\d)[A-Za-z\\d]{8,}$' autocomplete='on' placeholder='Enter new password')
                    div(class='register-form__div-item')
                        input(id="input-new-password-repeat" type='text' name='login' class='register-form__input' required pattern='^([a-zA-Z0-9_\\-\\.]+)@([a-zA-Z0-9_\\-\\.]+)\\.([a-zA-Z]{2,5})$|^(\\+7|7|8)?[\\s\\-]?\\(?[489][0-9]{2}\\)?[\\s\\-]?[0-9]{3}[\\s\\-]?[0-9]{2}[\\s\\-]?[0-9]{2}$' autocomplete='on' placeholder='Repeat new password')
                    button(type='button' class='register-form__button-register' onclick='submitChangePassword()') Change
        if data.changeLogin
            div(class='register-form')
                div(class='register-form__content')
                    div(class='register-form__header')
                        div(class='register-form__title') Change login
                        div(class='register-form__div-close' onclick='closeModal()')
                            img(src='assets/close.png' class='register-form__img-close')
                    div(class='register-form__div-item')
                        input(id="input-new-login" type='text' name='login' class='register-form__input' required pattern='^([a-zA-Z0-9_\\-\\.]+)@([a-zA-Z0-9_\\-\\.]+)\\.([a-zA-Z]{2,5})$|^(\\+7|7|8)?[\\s\\-]?\\(?[489][0-9]{2}\\)?[\\s\\-]?[0-9]{3}[\\s\\-]?[0-9]{2}[\\s\\-]?[0-9]{2}$' autocomplete='on' placeholder='Enter new login')
                button(type='button' class='register-form__button-register' onclick='submitChangeLogin()') Change
